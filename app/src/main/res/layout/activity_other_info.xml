<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonLastFM"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:text="LastFM"
        app:layout_constraintBottom_toTopOf="@+id/buttonWikipedia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNYT"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginBottom="132dp"
        android:text="New York Times"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonWikipedia"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:text="Wikipedia"
        app:layout_constraintBottom_toTopOf="@+id/buttonNYT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:text="¿En qué sitio quieres ver un artículo sobre el artista?"
        app:layout_constraintBottom_toTopOf="@+id/buttonLastFM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>